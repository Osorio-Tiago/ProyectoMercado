
@{
    ViewBag.Title = "Bitacora";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title></title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/fabe13b5d4.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

    @Styles.Render("~/Content/PrincipalStyle.css")
</head>
<body>

    <div class="container-fluid">
        <div class="row flex-nowrap">
            <div class="col-auto col-md-3 col-xl-2 px-sm-2 px-0 bg-dark">
                <div class="d-flex flex-column align-items-center align-items-sm-start px-3 pt-2 text-white min-vh-100">

                    <!--create navbar-->
                    <h2>Welcome, User!</h2>

                    <ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start" id="menu">

                        <li class="nav-item">
                            <a href="Bitacora" class="nav-link align-middle px-0">
                                <i class="fa-solid fa-person"></i> <span class="ms-1 d-none d-sm-inline">Ver bitacoras</span>
                            </a>
                        </li>

                        <li>
                            <a href="Consultar" class="nav-link px-0 align-middle">
                                <i class="fa-solid fa-pen-to-square"></i> <span class="ms-1 d-none d-sm-inline">Consultar producto</span>
                            </a>
                        </li>

                        <li>
                            <a href="Eliminar" class="nav-link px-0 align-middle">
                                <i class="fa-solid fa-calendar"></i> <span class="ms-1 d-none d-sm-inline">Eliminar producto</span>
                            </a>
                        </li>

                        <li>
                            <a href="Insertar" class="nav-link px-0 align-middle">
                                <i class="fa-solid fa-calendar"></i> <span class="ms-1 d-none d-sm-inline">Insertar producto</span>
                            </a>
                        </li>

                        <li>
                            <a href="Modificar" class="nav-link px-0 align-middle">
                                <i class="fa-solid fa-calendar"></i> <span class="ms-1 d-none d-sm-inline">Modificar producto</span>
                            </a>
                        </li>
                    </ul>

                    <hr>
                    <!--create icon options-->
                    <div class="dropdown pb-4">
                        <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
                            <img src="https://github.com/mdo.png" alt="hugenerd" width="30" height="30" class="rounded-circle">
                            <span class="d-none d-sm-inline mx-1">Nombre usuario</span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-dark text-small shadow">
                            <li><a class="dropdown-item" href="#">Menu option 1</a></li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                            <li><a class="dropdown-item" href="#">Cerrar Sesión</a></li>
                        </ul>
                    </div>
                </div>
            </div>


            <!--create content-->
            <div class="col py-3">
                <div class="components">
                    <p style="white-space: pre-line">@ViewBag.bitcoras</p>
                   
                    <!--add main information-->
                </div>
            </div>
        </div>
    </div>
</body>
</html>