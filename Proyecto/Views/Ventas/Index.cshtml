
@{
    ViewBag.Title = "Index";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Realizar venta</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/fabe13b5d4.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/Cajero/PrincipalStyle.css">
    @Styles.Render("~/Content/PrincipalStyle.css")
</head>
<body>

    <div class="container-fluid">
        <div class="row flex-nowrap">
            <div class="col-auto col-md-3 col-xl-2 px-sm-2 px-0 bg-dark">
                <div class="d-flex flex-column align-items-center align-items-sm-start px-3 pt-2 text-white min-vh-100">

                    <!--create navbar-->
                    <h2>Welcome, User!</h2>

                    <ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start" id="menu">

                        <li class="nav-item">
                            <a href="index" class="nav-link align-middle px-0">
                                <i class="fa-solid fa-person"></i> <span class="ms-1 d-none d-sm-inline">Realizar venta</span>
                            </a>
                        </li>

                        <li>
                            <a href="ConsultarPrecio" class="nav-link px-0 align-middle">
                                <i class="fa-solid fa-pen-to-square"></i> <span class="ms-1 d-none d-sm-inline">Consultar precio</span>
                            </a>
                        </li>

                    </ul>

                    <hr>
                    <!--create icon options-->
                    <div class="dropdown pb-4">
                        <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
                            <img src="https://github.com/mdo.png" alt="hugenerd" width="30" height="30" class="rounded-circle">
                            <span class="d-none d-sm-inline mx-1">Nombre usuario</span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-dark text-small shadow">
                            <li><a class="dropdown-item" href="#">Menu option 1</a></li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                            <li><a class="dropdown-item" href="#">Cerrar Sesión</a></li>
                        </ul>
                    </div>
                </div>
            </div>

            <!--create content-->
            <div class="col py-3">
                <div class="components">

                    <div class="form" >
                        <label>PLU/EAN</label>
                        <input type="text" id="idProducto" class="form__input">

                        <label>TIPO DE PRODUCTO</label>
                        <select id="tipoProducto" class="form__input">
                            <option value="fresco">Fresco</option>
                            <option value="noFresco">No Fresco</option>
                        </select>
                        
                        <label>CANTIDAD</label>
                        <input type="text" name="cantidad" id="cantidad" class="form__input">

                        <button id="agregarProducto" type="submit" class="btn">AGREGAR</button><br>

                        <button id="finalizaVenta" type="submit" class="btn">FINALIZAR VENTA</button><br>

                        <button id="verFactura" type="submit" class="btn">MOSTRAR FACTURA</button>
                    
                    </div>
                </div>
            </div>
        </div>
    </div>


    <!--create modal producto agregado--------------------------------------------------->
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
                <div class="modal fade" id="agregarProductoModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">

                                <h5 class="modal-title" id="staticBackdropLabel">Detalle de producto</h5>

                            </div>

                            <div class="modal-body" id="agregarProductoModal">
                                
                            </div>

                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>

                            </div>
                        </div>
                    </div>
                </div>
            </div>

    <!--create modal venta exitosa--------------------------------------------------->
 <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
                <div class="modal fade" id="finalizarVentaModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">

                                <h5 class="modal-title" id="staticBackdropLabel">Detalle de producto</h5>

                            </div>

                            <div class="modal-body" id="finalizarVentaModal">
                                
                            </div>

                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>

                            </div>
                        </div>
                    </div>
                </div>
            </div>


    <!--create modal ver factura------------------------------------------------------>
     <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
                <div class="modal fade" id="verFacturaModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">

                                <h5 class="modal-title" id="staticBackdropLabel">Detalle de producto</h5>

                            </div>

                            <div class="modal-body" id="verFacturaModal">
                                
                            </div>

                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>

                            </div>
                        </div>
                    </div>
                </div>
            </div>

</body>
</html>